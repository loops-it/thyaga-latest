    <script>
        var quickQuestions = [];
<% for (var i = 0; i < questions.length; i++) { %>
            quickQuestions.push({
                question: "<%= questions[i].question %>",
                answer: "<%= questions[i].answer %>"
            });
<% } %>

            console.log("quickQuestions : ", quickQuestions);

        // Filter the questions into categories
        var redeemQuestions = quickQuestions.filter(function (qa) {
            return qa.question === "What is Thyaga?";
        });
        var purchaseQuestions = quickQuestions.filter(function (qa) {
            return qa.question === "How can I purchase the Thyaga voucher?" || qa.question === "Are there any alternative methods for purchasing Thyaga vouchers other than through the website?";
        });
        var merchantsQuestions = quickQuestions.filter(function (qa) {
            return qa.question === "Does Thyaga offer a pick-up option? If yes, where is the pick-up location?" || qa.question === "What are the different ways I can send a Thyaga voucher?";
        });

        var questionButtonsContainer = document.getElementById("questionButtons");

        // Function to create and append buttons for each category
        function createCategorySection(title, questions) {
            var categoryTitle = document.createElement("li");
            categoryTitle.innerText = title;
            questionButtonsContainer.appendChild(categoryTitle);

            questions.forEach(function (qa) {
                var button = document.createElement("button");
                button.classList.add('quickQuestionButton', 'my-1');
                button.innerHTML = `
                <span class="d-flex flex-row justify-content-between align-items-center"> 
                  <span>${qa.question}</span> 
                  <i class="bi bi-arrow-right-square-fill"></i>
                </span>
            `;
                button.addEventListener("click", function () {
                    // Display the user's question
                    appendMessageToResponse('quickQuestion', qa.question);
                    // Display the corresponding answer
                    appendMessageToResponse('quickAnswer', qa.answer);
                });
                questionButtonsContainer.appendChild(button);
            });
        }

        // Create and append sections for each category
        createCategorySection("Redeem Questions", redeemQuestions);
        createCategorySection("Purchase Questions", purchaseQuestions);
        createCategorySection("Merchants Questions", merchantsQuestions);

        // quick questions ============================================================

    </script>
